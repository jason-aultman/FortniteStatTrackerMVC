@{
}
@model PlayerStat 
<div style="display:inline">
    <img src="@Model.Avatar" />
    <h1>
        Player statistics for @Html.DisplayFor(Model => Model.EpicUserHandle)
    </h1>
</div>

<ul style="list-style:none">
    <li style="font-weight:bolder; font-size:28px; "><u>
        @Html.Raw("Player Stats")
    </u></li>

    @for (int x = 0; x < Model.LifeTimeStats.Count; x++)
    {
        <li style="font-weight:bolder; font-size:26px">
            @Html.DisplayFor(Model => Model.LifeTimeStats[x].Key)
        </li>
        <li>
            @Html.DisplayFor(Model => Model.LifeTimeStats[x].Value)
        </li>
    }
</ul>
   