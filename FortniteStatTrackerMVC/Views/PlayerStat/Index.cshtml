<table>
    <tr>
        @for (int x = 0; x < Model.LifeTimeStats.Count; x++)
        {

            <th style="font-size:large; outline:1px solid black; padding:10px; text-align:center">
                @Model.LifeTimeStats[x].Key
            </th>

        }
    </tr>
    <tr>
        @for (int x = 0; x < Model.LifeTimeStats.Count; x++)
        {
            <td style="font-size:small; outline:1px solid black; padding:10px; text-align:center">
                @Model.LifeTimeStats[x].Value
            </td>
        }
    </tr>
</table>

    <br />
    <table caption ="Recent matches">
        <tr>
            <th style="font-size:large; outline:1px solid black; padding:10px; text-align:center">
                Id
            </th>
            <th style="font-size:large; outline:1px solid black; padding:10px; text-align:center">
                Kills
            </th>
            <th style="font-size:large; outline:1px solid black; padding:10px; text-align:center">
                Minutes Played
            </th>
            <th style="font-size:large; outline:1px solid black; padding:10px; text-align:center">
                Date Played
            </th>

        </tr>
        @foreach(var match in Model.RecentMatches)
        {
    <tr>
        <td style="font-size:small; outline:1px solid black; padding:10px; text-align:center">
            @match.Id
        </td>
        <td style="font-size:small; outline:1px solid black; padding:10px; text-align:center">
            @match.Kills
        </td>
        <td style="font-size:small; outline:1px solid black; padding:10px; text-align:center">
            @match.MinutesPlayed
        </td>
        <td style="font-size:small; outline:1px solid black; padding:10px; text-align:center">
            @match.DateCollected
        </td>
    </tr>
        }
    </table>
